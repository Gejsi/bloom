{
  "name": "core",
  "scripts": {
    "build": "tsup ./index.ts",
    "dev": "tsx watch ./index.ts"
  },
  "dependencies": {
    "typescript": "^4.7.4"
  },
  "devDependencies": {
    "tsup": "^6.5.0",
    "tsx": "^3.12.2",
    "tsconfig": "workspace:*"
  },
  "tsup": {
    "format": [
      "cjs",
      "esm"
    ],
    "dts": {
      "resolve": true
    },
    "sourcemap": true,
    "clean": true
  }
}
